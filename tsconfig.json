{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "pretty": true,
        "lib": ["dom", "es2015", "ES7"],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "outDir": "dist",
        "rootDir": "./",
        "baseUrl": "./",
        "sourceMap": true,
        "importHelpers": true
    },

    "exclude": [
        "dist",
        "node_modules",
        "test"
    ]
}
